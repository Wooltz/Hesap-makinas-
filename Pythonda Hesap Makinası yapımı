#işlemlerimizi hazirliyoruz  def topla(x,y):     return x+y def cikar(x,y):     return x-y def carp(x,y):     return x*y def bol(x,y):     return x/y def us_al(x,y):     return x**y print("yapilacak islemi seciniz") print("1.topla") print("2.cikar") print("3.carp") print("4.bol") print("5.us_al") #kullanicidan seçim istiyoruz secim=input("islem seciniz(1-2-3-4-5):") sayi1= int(input("1.sayiyi giriniz:")) sayi2= int(input("2.sayiyi giriniz:"))  if secim=='1':     print(sayi1, "+" ,sayi2,"=",topla(sayi1,sayi2)) if secim=='2':     print(sayi1, "-" ,sayi2,"=",cikar(sayi1,sayi2)) if secim=='3':     print(sayi1, "*" ,sayi2,"=",carp(sayi1,sayi2)) if secim=='4':     print(sayi1, "/" ,sayi2,"=",bol(sayi1,sayi2)) if secim=='5':     print(sayi1, "**" ,sayi2,"=",us_al(sayi1,sayi2)) else:     print("gecersiz giris.")
